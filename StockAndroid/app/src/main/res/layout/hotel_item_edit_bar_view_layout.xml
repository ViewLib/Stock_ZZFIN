<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inputLayout"
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:layout_gravity="center_vertical">

    <EditText
        android:id="@+id/stock_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/hotel_list_top_search_background_normal"
        android:drawableLeft="@drawable/hotel_icon_sarchcontrols"
        android:gravity="center_vertical"
        android:hint="请输入代码/中文/全拼/首字母"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="6"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:singleLine="true"
        android:textAppearance="@style/text_13_333333"
        android:textColorHint="#ffcccbcb" />

    <ImageView
        android:id="@+id/stock_edit_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/stock_icon_clean" />

</RelativeLayout>