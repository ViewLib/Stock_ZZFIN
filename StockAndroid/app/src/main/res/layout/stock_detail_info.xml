<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp">

        <TextView
            android:id="@+id/stock_detail_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textAppearance="@style/text_22_fe2a32" />


        <TextView
            android:id="@+id/stock_detail_change_pricevalue_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/stock_detail_price_tv"
            android:layout_toRightOf="@id/stock_detail_price_tv"
            android:textAppearance="@style/text_14_fe2a32" />

        <TextView
            android:id="@+id/stock_detail_change_priceratio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/stock_detail_change_pricevalue_tv"
            android:textAppearance="@style/text_14_fe2a32" />


        <TextView
            android:id="@+id/stock_detail_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableTop="@drawable/stock_history_item_add"
            android:text="添加" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.xt.lxl.stock.widget.view.StockDetailShowText
                android:id="@+id/stock_detail_price_top"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <com.xt.lxl.stock.widget.view.StockDetailShowText
                android:id="@+id/stock_detail_price_bottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.xt.lxl.stock.widget.view.StockDetailShowText
                android:id="@+id/stock_detail_upanddown"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <com.xt.lxl.stock.widget.view.StockDetailShowText
                android:id="@+id/stock_detail_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.xt.lxl.stock.widget.view.StockDetailShowText
                android:id="@+id/stock_detail_turnover"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <com.xt.lxl.stock.widget.view.StockDetailShowText
                android:id="@+id/stock_detail_marketvalue"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>