<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.xt.lxl.stock.widget.view.StockTitleView
            android:id="@+id/stock_title_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            app:stock_title_text_msg="股票详情" />

        <include
            android:id="@+id/stock_detail_info"
            layout="@layout/stock_detail_info" />

        <com.xt.lxl.stock.widget.view.StockDetailChartView
            android:id="@+id/stock_kline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <include
            android:id="@+id/stock_detail_event"
            layout="@layout/stock_detail_event" />


        <include
            android:id="@+id/stock_detail_news"
            layout="@layout/stock_detail_news" />

        <include
            android:id="@+id/stock_detail_desc"
            layout="@layout/stock_detail_desc" />


        <include
            android:id="@+id/stock_detail_finance"
            layout="@layout/stock_detail_finance" />

        <include
            android:id="@+id/stock_detail_compare"
            layout="@layout/stock_detail_compare" />

        <include
            android:id="@+id/stock_detail_grade"
            layout="@layout/stock_detail_grade" />

    </LinearLayout>
</ScrollView>