<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stock_main_white_bg"
    android:orientation="vertical"
    android:padding="10dp"
    >


    <com.xt.lxl.stock.widget.view.StockTextView
        android:id="@+id/stock_detail_finance_title"
        style="@style/text_14_000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="财务信息"
        app:stock_text_drawable_direction="stock_left"
        app:stock_text_drawable_height="12dp"
        app:stock_text_drawable_padding="3dp"
        app:stock_text_drawable_src="@drawable/stock_detail_finance"
        app:stock_text_drawable_width="12dp" />

    <com.xt.lxl.stock.widget.view.StockTabGroupButton
        android:id="@+id/stock_detail_finance_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/stock_detail_finance_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="财务信息界面" />

    </LinearLayout>

</LinearLayout>