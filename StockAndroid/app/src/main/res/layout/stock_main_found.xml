<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xt.lxl.stock.view.StockTitleView
        android:id="@+id/stock_title_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        app:stock_title_text_msg="发现" />

    <RelativeLayout
        android:id="@+id/stock_found_rank_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="104dp"
            android:adjustViewBounds="true"
            android:background="@drawable/stock_main_found_top10"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/stock_found_rank_title_text"
            style="@style/hotel_text_30_186DB7_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="十佳精彩榜单" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/stock_found_rank_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>