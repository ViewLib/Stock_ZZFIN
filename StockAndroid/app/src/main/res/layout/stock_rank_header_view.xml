<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DAE5EE"
    android:gravity="center_vertical"
    android:minHeight="30dp"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="25dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/stock_rank_header_name"
        style="@style/text_11_000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="名称" />

    <TextView
        android:id="@+id/stock_rank_header_add"
        style="@style/text_11_000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="加入自选" />

    <TextView
        android:id="@+id/stock_rank_header_attr1"
        style="@style/text_11_000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="连续跌停天数" />

    <TextView
        android:id="@+id/stock_rank_header_attr2"
        style="@style/text_11_000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="今年涨跌幅" />

    <TextView
        android:id="@+id/stock_rank_header_attr3"
        style="@style/text_11_000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="今天涨跌幅" />

</LinearLayout>
