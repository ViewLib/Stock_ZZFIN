<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="40dp">

    <TextView
        android:id="@+id/stock_list_item_type"
        android:layout_width="16dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/stock_list_item_name_view"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/stock_list_item_type"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stock_list_item_name_top"
            android:layout_width="wrap_content"
            android:layout_height="14dp" />

        <TextView
            android:id="@+id/stock_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="汉得信息"
            android:textAppearance="@style/text_16_ffffff" />

        <TextView
            android:id="@+id/stock_list_item_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="300170"
            android:textAppearance="@style/text_14_62696f" />

    </LinearLayout>

    <TextView
        android:id="@+id/stock_list_item_change"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="-1.82%"
        android:textAppearance="@style/text_17_ffffff" />

    <TextView
        android:id="@+id/stock_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/stock_list_item_change"
        android:layout_toRightOf="@id/stock_list_item_name_view"
        android:gravity="right|center_vertical"
        android:text="10.26"
        android:textAppearance="@style/text_18_ffffff" />


</RelativeLayout>