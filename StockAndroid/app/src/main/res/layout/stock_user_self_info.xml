<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">


    <ImageView
        android:id="@+id/stock_user_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/stock_user_default_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/stock_user_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stock_user_nickname"
            style="@style/text_22_00000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称" />

        <TextView
            android:id="@+id/stock_user_id"
            style="@style/text_13_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户ID" />

        <TextView
            android:id="@+id/stock_user_registerdata"
            style="@style/text_13_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册日期" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/stock_right_arrow"
        android:visibility="visible" />


</RelativeLayout>