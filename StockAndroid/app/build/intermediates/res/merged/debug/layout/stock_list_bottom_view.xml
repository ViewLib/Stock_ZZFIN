<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#1d2228"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.xt.lxl.stock.view.HotelTextView
        android:id="@+id/stock_self_optional"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="自选"
        android:textAppearance="@style/text_12_ffffff"
        app:hotel_text_drawable_direction="hotel_top"
        app:hotel_text_drawable_height="30dp"
        app:hotel_text_drawable_src="@drawable/stock_optional_tab_selected"
        app:hotel_text_drawable_width="30dp" />

    <com.xt.lxl.stock.view.HotelTextView
        android:id="@+id/stock_self_quotation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="行情"
        android:textAppearance="@style/text_12_ffffff"
        app:hotel_text_drawable_direction="hotel_top"
        app:hotel_text_drawable_height="30dp"
        app:hotel_text_drawable_src="@drawable/stock_quote_tab_normal"
        app:hotel_text_drawable_width="30dp" />

</LinearLayout>